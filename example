import random

def startGame():
    number = random.randint(1, 20)
    guess = 0
    attempts = 0
    print("Adivina el número entre 1 y 20")

    while guess != number:
        try:
            guess = int(input("Ingresa tu intento: "))
            attempts += 1

            if guess < number:
                print("Muy bajo")
            elif guess > number:
                print("Muy alto")
            else:
                print("¡Correcto!")
                print("Número de intentos:", attempts)
        except ValueError:
            print("Error: debes ingresar un número válido.")

startGame()
